import tkinter as tk
from tkinter import messagebox

def calculate_points():
    try:
        books = int(entry_books.get())
        if books < 0:
            messagebox.showerror("Invalid Input", "Please enter a non-negative number.")
            return

        if books == 0:
            points = 0
        elif books == 2:
            points = 5
        elif books == 4:
            points = 15
        elif books == 6:
            points = 30
        elif books >= 8:
            points = 60
        else:
            points = "No points for this amount (must be 0, 2, 4, 6, or 8+)."

        label_result.config(text=f"Points Awarded: {points}")

    except ValueError:
        messagebox.showerror("Invalid Input", "Please enter a valid number.")

#GUI setup
root = tk.Tk()
root.title("Serendipity Booksellers Rewards")
root.geometry("400x250")
root.configure(bg="lightblue")

label_title = tk.Label(root, text="Book Club Points Calculator", font=("Arial", 14, "bold"), bg="lightblue")
label_title.pack(pady=10)

label_prompt = tk.Label(root, text="Enter number of books purchased this month:", bg="lightblue")
label_prompt.pack()

entry_books = tk.Entry(root)
entry_books.pack(pady=5)

button_calc = tk.Button(root, text="Calculate Points", command=calculate_points, bg="lightgreen")
button_calc.pack(pady=10)

label_result = tk.Label(root, text="", font=("Arial", 12), bg="lightblue")
label_result.pack(pady=10)

root.mainloop()
